{
    "theme": {
      "name": "Cinevo Dark Theme",
      "version": "1.0.0",
      "colors": {
        "primary": {
          "yellow": "#facc15",
          "yellowHover": "#eab308",
          "yellowShadow": "rgba(245, 197, 24, 0.35)",
          "yellowGlow": "rgba(250, 204, 21, 0.8)"
        },
        "background": {
          "main": "#111827",
          "secondary": "#0b0b10",
          "tertiary": "#1a1a1f",
          "black": "#000000",
          "darkGray": "#0a0a0a",
          "gradient": {
            "primary": "linear-gradient(to bottom, #0b0b10, #0b0b10, #000000)",
            "secondary": "linear-gradient(to bottom, #111827, #000000, #0a0a0a)",
            "footer": "linear-gradient(to top, #1a1a1f, #0b0b10, #0b0b10)",
            "card": "linear-gradient(to bottom, #0b0b10, #0b0b10, #000000)",
            "backdrop": "linear-gradient(to right, rgba(0,0,0,0.8), rgba(0,0,0,0.5), transparent)",
            "overlay": "linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0.4), transparent)"
          }
        },
        "text": {
          "primary": "#ffffff",
          "secondary": "#e5e7eb",
          "tertiary": "#d1d5db",
          "muted": "#9ca3af",
          "gray": {
            "200": "#e5e7eb",
            "300": "#d1d5db",
            "400": "#9ca3af",
            "500": "#6b7280"
          }
        },
        "accent": {
          "red": "#ef4444",
          "redHover": "#dc2626",
          "blue": "#3b82f6",
          "blueHover": "#2563eb"
        },
        "border": {
          "primary": "rgba(255, 255, 255, 0.1)",
          "secondary": "#374151",
          "tertiary": "#4b5563"
        },
        "overlay": {
          "black60": "rgba(0, 0, 0, 0.6)",
          "black70": "rgba(0, 0, 0, 0.7)",
          "black80": "rgba(0, 0, 0, 0.8)",
          "black90": "rgba(0, 0, 0, 0.9)",
          "white5": "rgba(255, 255, 255, 0.05)",
          "white10": "rgba(255, 255, 255, 0.1)",
          "white20": "rgba(255, 255, 255, 0.2)"
        },
        "scrollbar": {
          "track": "#111827",
          "thumb": "#9ca3af",
          "thumbHover": "#d1d5db"
        }
      },
      "typography": {
        "fontFamily": {
          "primary": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
          "secondary": "Inter, system-ui, sans-serif"
        },
        "fontSize": {
          "xs": "0.75rem",
          "sm": "0.875rem",
          "base": "1rem",
          "lg": "1.125rem",
          "xl": "1.25rem",
          "2xl": "1.5rem",
          "3xl": "1.875rem",
          "4xl": "2.25rem",
          "5xl": "3rem"
        },
        "fontWeight": {
          "medium": "500",
          "semibold": "600",
          "bold": "700",
          "extrabold": "800",
          "black": "900"
        },
        "lineHeight": {
          "tight": "1.25",
          "relaxed": "1.625"
        },
        "letterSpacing": {
          "wide": "0.025em",
          "wider": "0.05em"
        }
      },
      "spacing": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem",
        "3xl": "4rem",
        "4xl": "6rem",
        "5xl": "8rem"
      },
      "borderRadius": {
        "sm": "0.125rem",
        "md": "0.375rem",
        "lg": "0.5rem",
        "xl": "0.75rem",
        "2xl": "1rem",
        "full": "9999px"
      },
      "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
        "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
        "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.25)",
        "glow": "0 0 25px 6px rgba(250, 204, 21, 0.8)",
        "yellowGlow": "0 0 6px rgba(245, 197, 24, 0.35)"
      },
      "transitions": {
        "fast": "0.15s",
        "normal": "0.3s",
        "slow": "0.5s",
        "slower": "0.6s",
        "ease": "ease-in-out",
        "duration": {
          "200": "200ms",
          "300": "300ms",
          "500": "500ms"
        }
      },
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1536px"
      },
      "zIndex": {
        "header": "30",
        "modal": "50",
        "overlay": "10",
        "dropdown": "20"
      },
      "components": {
        "button": {
          "primary": {
            "background": "#facc15",
            "backgroundHover": "#eab308",
            "color": "#000000",
            "padding": "0.75rem 2rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.875rem",
            "fontWeight": "600",
            "transition": "all 0.3s ease"
          },
          "secondary": {
            "background": "rgba(0, 0, 0, 0.6)",
            "backgroundHover": "rgba(0, 0, 0, 0.8)",
            "color": "#ffffff",
            "border": "1px solid rgba(255, 255, 255, 0.1)"
          },
          "wishlist": {
            "background": "rgba(0, 0, 0, 0.7)",
            "backgroundHover": "rgba(0, 0, 0, 0.9)",
            "borderRadius": "9999px",
            "padding": "0.5rem"
          }
        },
        "card": {
          "background": "#000000",
          "borderRadius": "0.75rem",
          "border": "1px solid #374151",
          "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
          "hoverScale": "1.05",
          "transition": "transform 0.3s ease"
        },
        "input": {
          "background": "rgba(255, 255, 255, 0.05)",
          "border": "1px solid rgba(255, 255, 255, 0.1)",
          "borderRadius": "9999px",
          "color": "#ffffff",
          "placeholder": "#9ca3af",
          "focus": {
            "outline": "none",
            "ring": "2px solid rgba(250, 204, 21, 0.2)"
          }
        },
        "nav": {
          "background": "transparent",
          "backgroundScrolled": "rgba(0, 0, 0, 0.8)",
          "backdropBlur": "blur(12px)",
          "border": "1px solid rgba(255, 255, 255, 0.1)"
        },
        "slider": {
          "height": {
            "mobile": "68vh",
            "desktop": "80vh"
          },
          "overlay": "linear-gradient(to right, rgba(0,0,0,0.8), rgba(0,0,0,0.5), transparent)"
        },
        "pagination": {
          "background": "#0b0b10",
          "button": {
            "background": "rgba(255, 255, 255, 0.1)",
            "backgroundHover": "rgba(255, 255, 255, 0.2)",
            "backgroundActive": "#facc15",
            "color": "#ffffff",
            "colorActive": "#000000"
          }
        }
      },
      "animations": {
        "pulse": "pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite",
        "fadeIn": "fadeIn 0.6s ease-in-out",
        "slideIn": "slideIn 0.6s ease-in-out",
        "scale": "scale 0.3s ease"
      },
      "layout": {
        "maxWidth": "1280px",
        "container": {
          "padding": "0 1.5rem"
        },
        "grid": {
          "columns": {
            "mobile": "1",
            "tablet": "3",
            "desktop": "4"
          },
          "gap": "1.5rem"
        }
      }
    }
  }